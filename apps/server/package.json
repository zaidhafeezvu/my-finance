{
  "name": "@finance-app/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun dist/index.js",
    "lint": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist .turbo node_modules",
    "db:setup": "bun src/scripts/db-setup.ts setup",
    "db:seed": "bun src/scripts/db-setup.ts seed",
    "db:clear": "bun src/scripts/db-setup.ts clear",
    "db:indexes": "bun src/scripts/db-setup.ts indexes",
    "db:reset": "bun src/scripts/db-setup.ts reset",
    "db:test": "bun src/database/test-connection.ts"
  },
  "dependencies": {
    "@finance-app/shared": "workspace:*",
    "bcryptjs": "^2.4.0",
    "cors": "^2.8.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}